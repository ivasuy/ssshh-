# ===========================================
# SSH - Developer Handbook + Stack Radar
# Environment Variables Configuration
# ===========================================

# MongoDB Atlas
# Get your connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Firebase Client-Side Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (Server-Side)
# Get these from Firebase Console > Project Settings > Service accounts > Generate new private key
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Google Cloud / Vertex AI
# Required for AI-powered card generation and content summarization
# Make sure Vertex AI API is enabled in your GCP project
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# GitHub API (for connectors)
# Create a personal access token at https://github.com/settings/tokens
# Required scopes: public_repo (for public repos) or repo (for private repos)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Cloudinary (for media uploads)
# Get these from Cloudinary Console > Dashboard
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Cron / Scheduling (for Docker/VPS deployment)
# Secret used to authenticate internal cron API calls
CRON_SECRET=your_cron_secret_here

# Base URL of the app (used by cron scheduler to call API routes)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# Optional / Future Integrations
# ===========================================

# Algora Bounties (optional - for bounty integration)
# ALGORA_API_KEY=your_algora_api_key

# Polar.sh Billing (optional - for monetization)
# POLAR_ACCESS_TOKEN=your_polar_access_token

# OpenSSF Scorecard (optional - for security scoring)
# OSSF_SCORECARD_API_URL=https://api.securityscorecards.dev
